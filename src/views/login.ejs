<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>
<body>
    <%- include('partials/header.ejs') %>

    <main>
        <div class="form-container">
            <form method="POST" action="/login" id="form-login" >
            
                <h1 class="form-title">Log In</h1>
                                   
                <div class="form-field">
                    <label for="email">Email</label>
                    <input type="email" name= 'email'id="email"
                    value="<%= locals.oldFormData && oldFormData.email ? oldFormData.email : '' %>">
                    <div class="field-feedback error-email">
                            <% if (locals.errors && errors.email) { %>
                                <%= errors.email.msg  %>
                            <%  }  %>         
                        </div>
                </div>
                
                <div class="form-field">
                    <label for="pass">Contrase√±a</label>
                    <input type="password" name= 'password' id="password">
                    <div class="field-feedback error-password">
                            <% if (locals.errors && errors.password) { %>
                                <%= errors.password.msg  %>
                            <%  }  %>         
                        </div>
                </div>
                                    
                <div class="form-actions">
                    <button type="submit" class="button">Ingresar</button>      
                </div>
            </form>      
        </div>            
    </main>

    <%- include('partials/footer.ejs') %>   
    <script src="scripts/loginValidation.js" type="text/javascript"></script>        
</body>
</html>