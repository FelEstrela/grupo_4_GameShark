                            <option value="swch">Switch</option>
                            <option value="pc">PC</option>
                        </select>
                        
                    </div>
                    <div>
                        <label for="price">Precio</label>
                        <input type="text">
                    </div>
                </div>
            </div>
            <div class="create-button">
                <button type="submit">Crear Producto</button>
            </div>
    </main>
</body>
</html>