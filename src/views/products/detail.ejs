<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>

    <section class="detail">
        <div class="detail-container">
            <div class="detail-img">
                <img src="/img/products/<%= product.image == null ? "product-image-default.jpg" : product.image%>">
            </div>
            <div class="detail-content">
                <div class="detail-title">
                    <a href="/products/edit/<%= product.id %>" class="butto">EDITAR</a>
                    <form method="POST" action="/products/<%= product.id %>?_method=delete"> 
                        <button>BORRAR</button>
                    </form>
                    <h2> <%= product.name %>  </h2>
                   
                    <h2 class="detail-price">$ <%= product.price %></h2>
                </div>
                <div class="detail-game">
                    <h4>Descripcion</h4>
                    <p><%= product.description %></p>
                </div>
                <div class="detail-cont">
                    <h4>Cantidad <input type="number" value="1"></h4>
                </div>
                <div class="detail-button">
                    <a href="#">AGREGAR AL CARRITO</a>
                </div>

            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>                
</body>
</html>